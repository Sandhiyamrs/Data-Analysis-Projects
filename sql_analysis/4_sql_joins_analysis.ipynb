"""
Example: load CSV into sqlite and run join query (script form).
"""
import sqlite3
import pandas as pd

def demo():
    conn = sqlite3.connect(":memory:")
    df_orders = pd.DataFrame({"order_id":[1,2], "customer_id":[100,101], "revenue":[50,75]})
    df_customers = pd.DataFrame({"customer_id":[100,101], "name":["Alice","Bob"]})
    df_orders.to_sql("orders", conn, index=False)
    df_customers.to_sql("customers", conn, index=False)
    q = "SELECT o.order_id, c.name, o.revenue FROM orders o JOIN customers c ON o.customer_id=c.customer_id"
    print(pd.read_sql(q, conn))

if __name__ == "__main__":
    demo()
